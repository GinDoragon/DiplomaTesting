<Page x:Class="DemoDiplom.PageMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoDiplom"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      MinHeight="500" MinWidth="800"
      Title="PageMainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="CreateDocument" Content="Создать документ" Height="50" Grid.Row="1" Margin="10" FontSize="25" FontWeight="Bold"/>
        <Button Content="Useless btn" Height="50" Grid.Row="2" Margin="10" FontSize="25" FontWeight="Bold"/>
        <Button  Content="Useless btn too" Height="50" Grid.Row="3" Margin="10" FontSize="25" FontWeight="Bold"/>
    </Grid>
</Page>
